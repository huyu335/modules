// TODO nf-core: Once you have added the required tests, please run the following command to build this file:
// nf-core modules test neoantigeninput
nextflow_process {

    name "Test Process NEOANTIGENINPUT"
    script "../main.nf"
    process "NEOANTIGENINPUT"
    config "./nextflow.config"

    tag "modules"
    tag "modules_msk"
    tag "neoantigeninput"

    test("neoantigen") {

        // TODO nf-core: If you are created a test for a chained module
        // (the module requires running more than one process to generate the required output)
        // add the 'setup' method here.
        // You can find more information about how to use a 'setup' method in the docs (https://nf-co.re/docs/contributing/modules#steps-for-creating-nf-test-for-chained-modules).
        when {
            process {
                """

                file(params.folderPath).mkdirs()
                0json_tmp = file(params.test_data_mskcc['neoantigen']['test4_mutass_0_json'], checkIfExists: true)
                1json_tmp = file(params.test_data_mskcc['neoantigen']['test4_mutass_1_json'], checkIfExists: true)
                
                0json = 0json_tmp.copyTo(file("0.json"))
                1json = 1json_tmp.copyTo(file("1.json"))

                0json.moveTo(file(params.folderPath + "/0.json"))
                1json.moveTo(file(params.folderPath + "/1.json"))

                
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file(params.test_data_mskcc['neoantigen']['temp_test_maf'], checkIfExists: true)
                    ]

                input[1] = [
                    file(params.test_data_mskcc['neoantigen']['test4_muts_json'], checkIfExists: true),
                    file(params.test_data_mskcc['neoantigen']['test4_summ_json'], checkIfExists: true),
                    file(params.folderPath, checkIfExists: true)
                    ]

                input[2] = [file(params.test_data_mskcc['neoantigen']['winners_hla_txt'], checkIfExists: true)]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
                //TODO nf-core: Add all required assertions to verify the test output.
            )
        }

    }

}
